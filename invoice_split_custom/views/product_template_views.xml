            </xpath>
            <xpath expr = "//field[@name='invoice_date']" position ="replace">
<!--            <attribute name="invisible">1</attribute>-->
            </xpath>
            <xpath expr = "//field[@name='amount_total_signed']" position ="replace">
<!--            <attribute name="invisible">1</attribute>-->
